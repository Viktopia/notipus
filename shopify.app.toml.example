# Shopify App Configuration
# Learn more at https://shopify.dev/docs/apps/tools/cli/configuration
#
# To use this file:
# 1. Copy to shopify.app.toml: cp shopify.app.toml.example shopify.app.toml
# 2. Replace "your_shopify_app_client_id" with your actual client ID from Shopify Partner Dashboard
# 3. Update application_url and redirect_urls for your environment
# 4. Deploy with: shopify app deploy

client_id = "your_shopify_app_client_id"
name = "notipus"
application_url = "https://app.notipus.com"
embedded = false

[webhooks]
api_version = "2026-01"

[access_scopes]
# Required scopes for webhook subscriptions:
# - read_orders: Subscribe to order webhooks (orders/create, orders/paid, orders/cancelled, etc.)
# - read_customers: Subscribe to customer webhooks (customers/create, customers/update, etc.)
#
# Note: There is no "write_webhooks" scope in Shopify. Webhook creation permissions are
# controlled by having the appropriate read scope for the resource you want to subscribe to.
scopes = "read_orders,read_customers"
optional_scopes = []
use_legacy_install_flow = false

[auth]
# OAuth callback URL - must match SHOPIFY_REDIRECT_URI environment variable
redirect_urls = ["https://app.notipus.com/api/connect/shopify/callback/"]
