{% extends "core/base.html.j2" %}

{% block title %}
    Integrations - {{ organization.name }}
{% endblock title %}

{% block content %}
    <div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
            <!-- Header -->
            <div class="mb-8">
                <div class="flex items-center">
                    <a href="{% url 'core:dashboard' %}"
                       class="mr-4 text-gray-400 hover:text-gray-600 transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Integrations</h1>
                        <p class="mt-2 text-lg text-gray-600">Connect your tools and automate your workflow</p>
                        <p class="mt-1 text-sm text-gray-500">
                            Set up event sources to receive webhooks and notification channels to send alerts
                        </p>
                    </div>
                </div>
            </div>

            <!-- Messages -->
            {% if messages %}
                {% for message in messages %}
                    <div class="mb-6 p-4 rounded-md {% if message.tags == 'error' %}bg-red-50 border border-red-200{% else %}bg-green-50 border border-green-200{% endif %}">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                {% if message.tags == 'error' %}
                                    <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd">
                                        </path>
                                    </svg>
                                {% else %}
                                    <svg class="h-5 w-5 text-green-400"
                                         fill="currentColor"
                                         viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd">
                                        </path>
                                    </svg>
                                {% endif %}
                            </div>
                            <div class="ml-3">
                                <p class="text-sm {% if message.tags == 'error' %}text-red-700{% else %}text-green-700{% endif %}">{{ message }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}

            <!-- Integration Sections Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">

                <!-- Event Sources Section -->
                <div class="bg-white shadow-lg rounded-xl border border-gray-100">
                    <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-blue-50 to-indigo-50">
                        <div class="flex items-center">
                            <div class="h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                <svg class="h-6 w-6 text-blue-600"
                                     fill="none"
                                     stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10">
                                    </path>
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h2 class="text-xl font-semibold text-gray-900">Event Sources</h2>
                                <p class="text-sm text-gray-600">Services that send webhooks to Notipus</p>
                            </div>
                        </div>
                    </div>

                    <div class="divide-y divide-gray-200">
                        {% for integration in event_sources %}
                            <div class="px-6 py-6 hover:bg-gray-50 transition-colors">
                                <div class="flex items-start justify-between">
                                    <div class="flex items-start">
                                        <!-- Integration Icon -->
                                        <div class="flex-shrink-0">
                                            {% if integration.id == 'shopify' %}
                                                <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                                                    <i class="fas fa-shopping-cart text-2xl text-green-600"></i>
                                                </div>
                                            {% elif integration.id == 'chargify' %}
                                                <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
                                                    <svg class="w-7 h-7 text-purple-600"
                                                         fill="none"
                                                         stroke="currentColor"
                                                         viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1">
                                                        </path>
                                                    </svg>
                                                </div>
                                            {% elif integration.id == 'stripe_customer' %}
                                                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                                                    <i class="fas fa-credit-card text-2xl text-blue-600"></i>
                                                </div>
                                            {% else %}
                                                <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center">
                                                    <svg class="w-7 h-7 text-gray-600"
                                                         fill="none"
                                                         stroke="currentColor"
                                                         viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1">
                                                        </path>
                                                    </svg>
                                                </div>
                                            {% endif %}
                                        </div>

                                        <!-- Integration Details -->
                                        <div class="ml-4 flex-1">
                                            <div class="flex items-center mb-1">
                                                <h3 class="text-lg font-semibold text-gray-900">{{ integration.name }}</h3>
                                                {% if integration.connected %}
                                                    <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd">
                                                            </path>
                                                        </svg>
                                                        Connected
                                                    </span>
                                                {% endif %}
                                            </div>
                                            <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-100 text-blue-800 mb-2">
                                                {{ integration.category }}
                                            </span>
                                            <p class="text-sm text-gray-600">{{ integration.description }}</p>
                                        </div>
                                    </div>

                                    <!-- Action Button -->
                                    <div class="ml-4 flex-shrink-0">
                                        {% if integration.connected %}
                                            {% if integration.id == "stripe_customer" %}
                                                <form method="post"
                                                      action="{% url 'core:disconnect_stripe' %}"
                                                      class="inline"
                                                      id="disconnect-stripe-form">
                                                    {% csrf_token %}
                                                    <button type="button"
                                                            onclick="confirmDisconnectStripe()"
                                                            class="inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm leading-4 font-medium rounded-lg text-red-700 bg-white hover:bg-red-50 transition-colors">
                                                        <svg class="w-4 h-4 mr-2"
                                                             fill="none"
                                                             stroke="currentColor"
                                                             viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
                                                            </path>
                                                        </svg>
                                                        Disconnect
                                                    </button>
                                                </form>
                                            {% elif integration.id == "shopify" %}
                                                <form method="post"
                                                      action="{% url 'core:disconnect_shopify' %}"
                                                      class="inline"
                                                      id="disconnect-shopify-form">
                                                    {% csrf_token %}
                                                    <button type="button"
                                                            onclick="confirmDisconnectShopify()"
                                                            class="inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm leading-4 font-medium rounded-lg text-red-700 bg-white hover:bg-red-50 transition-colors">
                                                        <svg class="w-4 h-4 mr-2"
                                                             fill="none"
                                                             stroke="currentColor"
                                                             viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
                                                            </path>
                                                        </svg>
                                                        Disconnect
                                                    </button>
                                                </form>
                                            {% else %}
                                                <button type="button"
                                                        class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                                                    <svg class="w-4 h-4 mr-2"
                                                         fill="none"
                                                         stroke="currentColor"
                                                         viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z">
                                                        </path>
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                    </svg>
                                                    Manage
                                                </button>
                                            {% endif %}
                                        {% else %}
                                            {% if integration.id == "shopify" %}
                                                <a href="{% url 'core:integrate_shopify' %}"
                                                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 transition-all duration-200 shadow-sm">
                                                    <svg class="w-4 h-4 mr-2"
                                                         fill="none"
                                                         stroke="currentColor"
                                                         viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                                    </svg>
                                                    Connect
                                                </a>
                                            {% elif integration.id == "chargify" %}
                                                <a href="{% url 'core:integrate_chargify' %}"
                                                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 transition-all duration-200 shadow-sm">
                                                    <svg class="w-4 h-4 mr-2"
                                                         fill="none"
                                                         stroke="currentColor"
                                                         viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                                    </svg>
                                                    Connect
                                                </a>
                                            {% elif integration.id == "stripe_customer" %}
                                                <a href="{% url 'core:integrate_stripe' %}"
                                                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 transition-all duration-200 shadow-sm">
                                                    <svg class="w-4 h-4 mr-2"
                                                         fill="none"
                                                         stroke="currentColor"
                                                         viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                                    </svg>
                                                    Connect
                                                </a>
                                            {% else %}
                                                <button type="button"
                                                        class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-400 bg-gray-100 cursor-not-allowed">
                                                    Coming Soon
                                                </button>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Notification Channels Section -->
                <div class="bg-white shadow-lg rounded-xl border border-gray-100">
                    <div class="px-6 py-5 border-b border-gray-200 bg-gradient-to-r from-green-50 to-emerald-50">
                        <div class="flex items-center">
                            <div class="h-10 w-10 bg-green-100 rounded-lg flex items-center justify-center">
                                <svg class="h-6 w-6 text-green-600"
                                     fill="none"
                                     stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z">
                                    </path>
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h2 class="text-xl font-semibold text-gray-900">Notification Channels</h2>
                                <p class="text-sm text-gray-600">Where to send alerts from Notipus</p>
                            </div>
                        </div>
                    </div>

                    <div class="divide-y divide-gray-200">
                        {% for integration in notification_channels %}
                            <div class="px-6 py-6 hover:bg-gray-50 transition-colors">
                                <div class="flex items-start justify-between">
                                    <div class="flex items-start">
                                        <!-- Integration Icon -->
                                        <div class="flex-shrink-0">
                                            {% if integration.id == 'slack_notifications' %}
                                                <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
                                                    <i class="fas fa-comments text-2xl text-purple-600"></i>
                                                </div>
                                            {% else %}
                                                <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center">
                                                    <svg class="w-7 h-7 text-gray-600"
                                                         fill="none"
                                                         stroke="currentColor"
                                                         viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z">
                                                        </path>
                                                    </svg>
                                                </div>
                                            {% endif %}
                                        </div>

                                        <!-- Integration Details -->
                                        <div class="ml-4 flex-1">
                                            <div class="flex items-center mb-1">
                                                <h3 class="text-lg font-semibold text-gray-900">{{ integration.name }}</h3>
                                                {% if integration.connected %}
                                                    <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd">
                                                            </path>
                                                        </svg>
                                                        Connected
                                                    </span>
                                                {% endif %}
                                            </div>
                                            <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-green-100 text-green-800 mb-2">
                                                {{ integration.category }}
                                            </span>
                                            <p class="text-sm text-gray-600">{{ integration.description }}</p>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="ml-4 flex-shrink-0 flex flex-col items-end space-y-2">
                                        {% if integration.connected %}
                                            {% if integration.id == "slack_notifications" %}
                                                <!-- Top row: Configure and Send Test -->
                                                <div class="flex items-center space-x-2">
                                                    <button type="button"
                                                            onclick="openSlackConfigModal()"
                                                            class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                                                        <svg class="w-4 h-4 mr-2"
                                                             fill="none"
                                                             stroke="currentColor"
                                                             viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z">
                                                            </path>
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                        </svg>
                                                        Configure
                                                    </button>
                                                    <form method="post" action="{% url 'core:test_slack' %}" class="inline">
                                                        {% csrf_token %}
                                                        <button type="submit"
                                                                class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                                                            <svg class="w-4 h-4 mr-2"
                                                                 fill="none"
                                                                 stroke="currentColor"
                                                                 viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                                                            </svg>
                                                            Send Test
                                                        </button>
                                                    </form>
                                                </div>
                                                <!-- Bottom row: Disconnect -->
                                                <form method="post"
                                                      action="{% url 'core:disconnect_slack' %}"
                                                      class="inline"
                                                      id="disconnect-slack-form">
                                                    {% csrf_token %}
                                                    <button type="button"
                                                            onclick="confirmDisconnectSlack()"
                                                            class="inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm leading-4 font-medium rounded-lg text-red-700 bg-white hover:bg-red-50 transition-colors">
                                                        <svg class="w-4 h-4 mr-2"
                                                             fill="none"
                                                             stroke="currentColor"
                                                             viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
                                                            </path>
                                                        </svg>
                                                        Disconnect
                                                    </button>
                                                </form>
                                            {% else %}
                                                <button type="button"
                                                        class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                                                    <svg class="w-4 h-4 mr-2"
                                                         fill="none"
                                                         stroke="currentColor"
                                                         viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z">
                                                        </path>
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                    </svg>
                                                    Manage
                                                </button>
                                            {% endif %}
                                        {% else %}
                                            {% if integration.id == "slack_notifications" %}
                                                <a href="{% url 'core:integrate_slack' %}"
                                                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 transition-all duration-200 shadow-sm">
                                                    <svg class="w-4 h-4 mr-2"
                                                         fill="none"
                                                         stroke="currentColor"
                                                         viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                                    </svg>
                                                    Connect
                                                </a>
                                            {% else %}
                                                <button type="button"
                                                        class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-400 bg-gray-100 cursor-not-allowed">
                                                    Coming Soon
                                                </button>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                        <!-- Coming Soon Placeholder -->
                        <div class="px-6 py-6 bg-gray-50">
                            <div class="text-center">
                                <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center mx-auto mb-3">
                                    <svg class="w-7 h-7 text-gray-400"
                                         fill="none"
