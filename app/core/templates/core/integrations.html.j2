{% extends "core/base.html.j2" %}

{% block title %}
    Integrations - {{ organization.name }}
{% endblock title %}

{% block content %}
    <div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-blue-50/30 py-8 px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
            <!-- Header -->
            <div class="mb-8">
                <div class="flex items-center mb-4">
                    <a href="{% url 'core:dashboard' %}"
                       class="mr-4 p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-all duration-200">
                        <i class="ti ti-arrow-left text-xl"></i>
                    </a>
                    <div>
                        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 flex items-center gap-3">
                            <span class="p-2 bg-primary-100 rounded-xl">
                                <i class="ti ti-plug-connected text-primary-600 text-xl"></i>
                            </span>
                            Integrations
                        </h1>
                        <p class="mt-1 text-gray-500">Connect your tools and automate your workflow</p>
                    </div>
                </div>
            </div>

            <!-- Messages -->
            {% if messages %}
                {% for message in messages %}
                    <div class="mb-6 p-4 rounded-xl {% if message.tags == 'error' %}bg-red-50 border border-red-200{% else %}bg-green-50 border border-green-200{% endif %}">
                        <div class="flex items-center gap-3">
                            {% if message.tags == 'error' %}
                                <i class="ti ti-alert-circle text-red-500 text-lg"></i>
                            {% else %}
                                <i class="ti ti-circle-check text-green-500 text-lg"></i>
                            {% endif %}
                            <p class="text-sm {% if message.tags == 'error' %}text-red-700{% else %}text-green-700{% endif %}">{{ message }}</p>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}

            <!-- Integration Sections Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">

                <!-- Event Sources Section -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                    <div class="px-6 py-5 border-b border-gray-100 bg-gradient-to-r from-blue-50/80 to-indigo-50/50">
                        <div class="flex items-center gap-3">
                            <div class="h-10 w-10 bg-blue-100 rounded-xl flex items-center justify-center">
                                <i class="ti ti-cloud-download text-blue-600 text-xl"></i>
                            </div>
                            <div>
                                <h2 class="text-lg font-semibold text-gray-900">Event Sources</h2>
                                <p class="text-sm text-gray-500">Services that send webhooks to Notipus</p>
                            </div>
                        </div>
                    </div>

                    <div class="divide-y divide-gray-100">
                        {% for integration in event_sources %}
                            <div class="px-6 py-5 hover:bg-gray-50/50 transition-colors">
                                <div class="flex items-start justify-between gap-4">
                                    <div class="flex items-start gap-4">
                                        <!-- Integration Icon -->
                                        <div class="flex-shrink-0">
                                            {% if integration.id == 'shopify' %}
                                                <!-- Shopify Brand Icon -->
                                                <div class="w-12 h-12 bg-[#95BF47]/10 rounded-xl flex items-center justify-center">
                                                    <svg class="w-7 h-7" viewBox="0 0 24 24" fill="none">
                                                        <path d="M15.34 5.68c-.01-.07-.07-.11-.12-.12-.05 0-1.05-.08-1.05-.08s-.7-.7-.87-.87c-.17-.17-.51-.12-.64-.08-.02 0-.26.08-.66.21-.39-1.13-1.08-2.16-2.3-2.16h-.11c-.35-.45-.78-.65-1.14-.65-2.82 0-4.17 3.53-4.59 5.32-.67.21-1.14.35-1.2.37-.37.12-.38.13-.43.48-.04.27-1.02 7.86-1.02 7.86l7.63 1.43 4.15-1.03s-1.58-10.75-1.59-10.82v-.02l-.06.36zM11.17 3.8c-.32.1-.67.21-1.04.32v-.23c0-.68-.09-1.23-.24-1.67.6.08.99.76 1.28 1.58zm-2.08-1.4c.16.4.26.97.26 1.75v.11l-2.14.66c.41-1.58 1.18-2.35 1.88-2.52zm-.79-.54c.12 0 .25.04.37.12-.9.42-1.86 1.48-2.26 3.6l-1.69.52c.47-1.59 1.58-4.24 3.58-4.24z" fill="#95BF47" />
                                                        <path d="M15.22 5.56c-.05 0-1.05-.08-1.05-.08s-.7-.7-.87-.87c-.06-.07-.15-.1-.24-.11l-.57 11.66 4.15-1.03s-1.58-10.75-1.59-10.82c-.01-.07-.07-.11-.12-.12l.29 1.37z" fill="#5E8E3E" />
                                                        <path d="M10.04 8.27l-.5 1.85s-.55-.25-1.21-.21c-.97.06-1.1.67-1.08.82.06.94 2.53 1.15 2.67 3.36.11 1.74-.92 2.93-2.41 3.02-1.79.11-2.77-.94-2.77-.94l.38-1.61s.99.75 1.78.7c.52-.03.7-.46.69-.76-.08-1.23-2.09-1.16-2.22-3.18-.11-1.7 1.01-3.42 3.47-3.58.95-.06 1.43.18 1.43.18l-.23.35z" fill="#fff" />
                                                    </svg>
                                                </div>
                                            {% elif integration.id == 'chargify' %}
                                                <!-- Chargify/Maxio Icon -->
                                                <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
                                                    <i class="ti ti-currency-dollar text-purple-600 text-2xl"></i>
                                                </div>
                                            {% elif integration.id == 'stripe_customer' %}
                                                <!-- Stripe Brand Icon -->
                                                <div class="w-12 h-12 bg-[#635bff]/10 rounded-xl flex items-center justify-center">
                                                    <svg class="w-7 h-7" viewBox="0 0 24 24" fill="#635bff">
                                                        <path d="M13.976 9.15c-2.172-.806-3.356-1.426-3.356-2.409 0-.831.683-1.305 1.901-1.305 2.227 0 4.515.858 6.09 1.631l.89-5.494C18.252.975 15.697 0 12.165 0 9.667 0 7.589.654 6.104 1.872 4.56 3.147 3.757 4.992 3.757 7.218c0 4.039 2.467 5.76 6.476 7.219 2.585.92 3.445 1.574 3.445 2.583 0 .98-.84 1.545-2.354 1.545-1.875 0-4.965-.921-6.99-2.109l-.9 5.555C5.175 22.99 8.385 24 11.714 24c2.641 0 4.843-.624 6.328-1.813 1.664-1.305 2.525-3.236 2.525-5.732 0-4.128-2.524-5.851-6.591-7.305z" />
                                                    </svg>
                                                </div>
                                            {% else %}
                                                <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center">
                                                    <i class="ti ti-link text-gray-500 text-2xl"></i>
                                                </div>
                                            {% endif %}
                                        </div>

                                        <!-- Integration Details -->
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-center gap-2 mb-1">
                                                <h3 class="text-base font-semibold text-gray-900">{{ integration.name }}</h3>
                                                {% if integration.connected %}
                                                    <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                                                        <i class="ti ti-circle-check text-xs"></i>
                                                        Connected
                                                    </span>
                                                {% endif %}
                                            </div>
                                            <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium bg-blue-50 text-blue-700 mb-2">
                                                {{ integration.category }}
                                            </span>
                                            <p class="text-sm text-gray-500">{{ integration.description }}</p>
                                        </div>
                                    </div>

                                    <!-- Action Button -->
                                    <div class="flex-shrink-0">
                                        {% if integration.connected %}
                                            {% if integration.id == "stripe_customer" %}
                                                <div class="flex flex-col items-end gap-2">
                                                    <a href="{% url 'core:integrate_stripe' %}"
                                                       class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                                                        <i class="ti ti-settings"></i>
                                                        Configure
                                                    </a>
                                                    <form method="post"
                                                          action="{% url 'core:disconnect_stripe' %}"
                                                          class="inline"
                                                          id="disconnect-stripe-form">
                                                        {% csrf_token %}
                                                        <button type="button"
                                                                onclick="confirmDisconnectStripe()"
                                                                class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg transition-colors">
                                                            <i class="ti ti-unlink"></i>
                                                            Disconnect
                                                        </button>
                                                    </form>
                                                </div>
                                            {% elif integration.id == "shopify" %}
                                                <form method="post"
                                                      action="{% url 'core:disconnect_shopify' %}"
                                                      class="inline"
                                                      id="disconnect-shopify-form">
                                                    {% csrf_token %}
                                                    <button type="button"
                                                            onclick="confirmDisconnectShopify()"
                                                            class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg transition-colors">
                                                        <i class="ti ti-unlink"></i>
                                                        Disconnect
                                                    </button>
                                                </form>
                                            {% elif integration.id == "chargify" %}
                                                <a href="{% url 'core:integrate_chargify' %}"
                                                   class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                                                    <i class="ti ti-settings"></i>
                                                    Configure
                                                </a>
                                            {% else %}
                                                <button type="button"
                                                        class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                                                    <i class="ti ti-settings"></i>
                                                    Manage
                                                </button>
                                            {% endif %}
                                        {% else %}
                                            {% if integration.id == "shopify" %}
                                                <a href="{% url 'core:integrate_shopify' %}"
                                                   class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-white bg-[#95BF47] hover:bg-[#7ea93d] rounded-lg transition-colors shadow-sm">
                                                    <i class="ti ti-plug-connected"></i>
                                                    Connect
                                                </a>
                                            {% elif integration.id == "chargify" %}
                                                <a href="{% url 'core:integrate_chargify' %}"
                                                   class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 rounded-lg transition-colors shadow-sm">
                                                    <i class="ti ti-plug-connected"></i>
                                                    Connect
                                                </a>
                                            {% elif integration.id == "stripe_customer" %}
                                                <a href="{% url 'core:integrate_stripe' %}"
                                                   class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-white bg-[#635bff] hover:bg-[#5851db] rounded-lg transition-colors shadow-sm">
                                                    <i class="ti ti-plug-connected"></i>
                                                    Connect
                                                </a>
                                            {% else %}
                                                <button type="button"
                                                        disabled
                                                        class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-gray-400 bg-gray-100 rounded-lg cursor-not-allowed">
                                                    Coming Soon
                                                </button>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Notification Channels Section -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                    <div class="px-6 py-5 border-b border-gray-100 bg-gradient-to-r from-green-50/80 to-emerald-50/50">
                        <div class="flex items-center gap-3">
                            <div class="h-10 w-10 bg-green-100 rounded-xl flex items-center justify-center">
                                <i class="ti ti-send text-green-600 text-xl"></i>
                            </div>
                            <div>
                                <h2 class="text-lg font-semibold text-gray-900">Notification Channels</h2>
                                <p class="text-sm text-gray-500">Where to send alerts from Notipus</p>
                            </div>
                        </div>
                    </div>

                    <div class="divide-y divide-gray-100">
                        {% for integration in notification_channels %}
                            <div class="px-6 py-5 hover:bg-gray-50/50 transition-colors">
                                <div class="flex items-start justify-between gap-4">
                                    <div class="flex items-start gap-4">
                                        <!-- Integration Icon -->
                                        <div class="flex-shrink-0">
                                            {% if integration.id == 'slack_notifications' %}
                                                <!-- Slack Brand Icon -->
                                                <div class="w-12 h-12 bg-[#4A154B]/10 rounded-xl flex items-center justify-center">
                                                    <svg class="w-7 h-7" viewBox="0 0 24 24">
                                                        <path fill="#E01E5A" d="M5.042 15.165a2.528 2.528 0 0 1-2.52 2.523A2.528 2.528 0 0 1 0 15.165a2.527 2.527 0 0 1 2.522-2.52h2.52v2.52zM6.313 15.165a2.527 2.527 0 0 1 2.521-2.52 2.527 2.527 0 0 1 2.521 2.52v6.313A2.528 2.528 0 0 1 8.834 24a2.528 2.528 0 0 1-2.521-2.522v-6.313z" />
                                                        <path fill="#36C5F0" d="M8.834 5.042a2.528 2.528 0 0 1-2.521-2.52A2.528 2.528 0 0 1 8.834 0a2.528 2.528 0 0 1 2.521 2.522v2.52H8.834zM8.834 6.313a2.528 2.528 0 0 1 2.521 2.521 2.528 2.528 0 0 1-2.521 2.521H2.522A2.528 2.528 0 0 1 0 8.834a2.528 2.528 0 0 1 2.522-2.521h6.312z" />
                                                        <path fill="#2EB67D" d="M18.956 8.834a2.528 2.528 0 0 1 2.522-2.521A2.528 2.528 0 0 1 24 8.834a2.528 2.528 0 0 1-2.522 2.521h-2.522V8.834zM17.688 8.834a2.528 2.528 0 0 1-2.523 2.521 2.527 2.527 0 0 1-2.52-2.521V2.522A2.527 2.527 0 0 1 15.165 0a2.528 2.528 0 0 1 2.523 2.522v6.312z" />
                                                        <path fill="#ECB22E" d="M15.165 18.956a2.528 2.528 0 0 1 2.523 2.522A2.528 2.528 0 0 1 15.165 24a2.527 2.527 0 0 1-2.52-2.522v-2.522h2.52zM15.165 17.688a2.527 2.527 0 0 1-2.52-2.523 2.526 2.526 0 0 1 2.52-2.52h6.313A2.527 2.527 0 0 1 24 15.165a2.528 2.528 0 0 1-2.522 2.523h-6.313z" />
                                                    </svg>
                                                </div>
                                            {% elif integration.id == 'telegram_notifications' %}
                                                <!-- Telegram Brand Icon -->
                                                <div class="w-12 h-12 bg-[#0088cc]/10 rounded-xl flex items-center justify-center">
                                                    <svg class="w-7 h-7" viewBox="0 0 24 24" fill="#0088cc">
                                                        <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
                                                    </svg>
                                                </div>
                                            {% else %}
                                                <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center">
                                                    <i class="ti ti-message text-gray-500 text-2xl"></i>
                                                </div>
                                            {% endif %}
                                        </div>

                                        <!-- Integration Details -->
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-center gap-2 mb-1">
                                                <h3 class="text-base font-semibold text-gray-900">{{ integration.name }}</h3>
                                                {% if integration.connected %}
                                                    <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                                                        <i class="ti ti-circle-check text-xs"></i>
                                                        Connected
                                                    </span>
                                                {% endif %}
                                            </div>
                                            <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium bg-green-50 text-green-700 mb-2">
                                                {{ integration.category }}
                                            </span>
                                            <p class="text-sm text-gray-500">{{ integration.description }}</p>
                                        </div>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="flex-shrink-0 flex flex-col items-end gap-2">
                                        {% if integration.connected %}
                                            {% if integration.id == "slack_notifications" %}
                                                <!-- Top row: Configure and Send Test -->
                                                <div class="flex items-center gap-2">
                                                    <button type="button"
                                                            onclick="openSlackConfigModal()"
                                                            class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                                                        <i class="ti ti-settings"></i>
                                                        Configure
                                                    </button>
                                                    <form method="post" action="{% url 'core:test_slack' %}" class="inline">
                                                        {% csrf_token %}
                                                        <button type="submit"
                                                                class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                                                            <i class="ti ti-send"></i>
                                                            Test
                                                        </button>
                                                    </form>
                                                </div>
                                                <!-- Bottom row: Disconnect -->
                                                <form method="post"
                                                      action="{% url 'core:disconnect_slack' %}"
                                                      class="inline"
                                                      id="disconnect-slack-form">
                                                    {% csrf_token %}
                                                    <button type="button"
                                                            onclick="confirmDisconnectSlack()"
                                                            class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg transition-colors">
                                                        <i class="ti ti-unlink"></i>
                                                        Disconnect
                                                    </button>
                                                </form>
                                            {% elif integration.id == "telegram_notifications" %}
                                                <!-- Top row: Configure and Send Test -->
                                                <div class="flex items-center gap-2">
                                                    <a href="{% url 'core:telegram_connect' %}"
                                                       class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                                                        <i class="ti ti-settings"></i>
                                                        Configure
                                                    </a>
                                                    <form method="post" action="{% url 'core:test_telegram' %}" class="inline">
                                                        {% csrf_token %}
                                                        <button type="submit"
                                                                class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                                                            <i class="ti ti-send"></i>
                                                            Test
                                                        </button>
                                                    </form>
                                                </div>
                                                <!-- Bottom row: Disconnect -->
                                                <form method="post"
                                                      action="{% url 'core:disconnect_telegram' %}"
                                                      class="inline"
                                                      id="disconnect-telegram-form">
                                                    {% csrf_token %}
                                                    <button type="button"
                                                            onclick="confirmDisconnectTelegram()"
                                                            class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg transition-colors">
                                                        <i class="ti ti-unlink"></i>
                                                        Disconnect
                                                    </button>
                                                </form>
                                            {% else %}
                                                <button type="button"
                                                        class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                                                    <i class="ti ti-settings"></i>
                                                    Manage
                                                </button>
                                            {% endif %}
                                        {% else %}
                                            {% if integration.id == "slack_notifications" %}
                                                <a href="{% url 'core:integrate_slack' %}"
                                                   class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-white bg-[#4A154B] hover:bg-[#3e1240] rounded-lg transition-colors shadow-sm">
                                                    <i class="ti ti-plug-connected"></i>
                                                    Connect
                                                </a>
                                            {% elif integration.id == "telegram_notifications" %}
                                                <a href="{% url 'core:telegram_connect' %}"
                                                   class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-white bg-[#0088cc] hover:bg-[#0077b5] rounded-lg transition-colors shadow-sm">
                                                    <i class="ti ti-plug-connected"></i>
                                                    Connect
                                                </a>
                                            {% else %}
                                                <button type="button"
                                                        disabled
                                                        class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-gray-400 bg-gray-100 rounded-lg cursor-not-allowed">
                                                    Coming Soon
                                                </button>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                        <!-- Coming Soon Placeholder -->
                        <div class="px-6 py-5 bg-gray-50/50">
                            <div class="text-center">
                                <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center mx-auto mb-3">
                                    <i class="ti ti-dots text-gray-400 text-xl"></i>
                                </div>
                                <h3 class="text-sm font-medium text-gray-700 mb-1">More channels coming soon</h3>
                                <p class="text-xs text-gray-500">Discord, Teams, Email, and more</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Webhook Information (Collapsible) -->
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden mb-8">
                <button type="button"
                        id="webhook-config-toggle"
                        onclick="toggleWebhookConfig()"
                        aria-expanded="false"
                        aria-controls="webhook-config-content"
                        class="w-full px-6 py-4 flex items-center justify-between hover:bg-gray-50/50 transition-colors">
                    <div class="flex items-center gap-3">
                        <div class="h-10 w-10 bg-gray-100 rounded-xl flex items-center justify-center">
                            <i class="ti ti-code text-gray-600 text-xl"></i>
                        </div>
                        <div class="text-left">
                            <h2 class="text-base font-semibold text-gray-900">Webhook Configuration</h2>
                            <p class="text-sm text-gray-500">Technical details for setting up your webhook endpoints</p>
                        </div>
                    </div>
                    <i id="webhook-config-chevron"
                       class="ti ti-chevron-down text-gray-400 text-xl transition-transform duration-200"></i>
                </button>
                <div id="webhook-config-content" class="hidden border-t border-gray-100">
                    <div class="px-6 py-5">
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Organization Webhook Token</label>
