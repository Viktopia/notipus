    <script>
        function copyToClipboard(text) {
            NotipusUI.copyToClipboard(text);
        }

        function toggleWebhookConfig() {
            const content = document.getElementById('webhook-config-content');
            const chevron = document.getElementById('webhook-config-chevron');
            content.classList.toggle('hidden');
            chevron.classList.toggle('rotate-180');
        }

        async function confirmDisconnectSlack() {
            const confirmed = await NotipusUI.confirmDisconnect(
                'Slack',
                'You will stop receiving notifications. You can reconnect at any time.'
            );
            if (confirmed) {
                document.getElementById('disconnect-slack-form').submit();
            }
        }

        async function confirmDisconnectStripe() {
            const confirmed = await NotipusUI.confirmDisconnect(
                'Stripe',
                'You will stop receiving payment notifications. The webhook endpoint will be removed from your Stripe account.'
            );
            if (confirmed) {
                document.getElementById('disconnect-stripe-form').submit();
            }
        }

        async function confirmDisconnectShopify() {
            const confirmed = await NotipusUI.confirmDisconnect(
                'Shopify',
                'You will stop receiving order notifications. The webhook subscriptions will be removed from your Shopify store.'
            );
            if (confirmed) {
                document.getElementById('disconnect-shopify-form').submit();
            }
        }

        // Slack Configuration Modal Functions
        async function openSlackConfigModal() {
            const modal = document.getElementById('slack-config-modal');
            const loading = document.getElementById('slack-channel-loading');
            const select = document.getElementById('slack-channel-select');
            const errorEl = document.getElementById('slack-channel-error');
            const saveBtn = document.getElementById('slack-config-save');

            // Reset state
            loading.classList.remove('hidden');
            select.classList.add('hidden');
            errorEl.classList.add('hidden');
            saveBtn.disabled = true;

            // Show modal
            modal.classList.remove('hidden');
            modal.setAttribute('aria-hidden', 'false');

            // Fetch channels
            try {
                const response = await fetch('{% url "core:get_slack_channels" %}');
                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.error || 'Failed to fetch channels');
                }

                // Populate select
                select.innerHTML = '';
                data.channels.forEach(channel => {
                    const option = document.createElement('option');
                    option.value = `#${channel.name}`;
                    option.textContent = `#${channel.name}`;
                    if (`#${channel.name}` === data.current_channel) {
                        option.selected = true;
                    }
                    select.appendChild(option);
                });

                // Show select, hide loading
                loading.classList.add('hidden');
                select.classList.remove('hidden');
                saveBtn.disabled = false;

            } catch (error) {
                loading.classList.add('hidden');
                errorEl.textContent = error.message;
                errorEl.classList.remove('hidden');
            }
        }

        function closeSlackConfigModal() {
            const modal = document.getElementById('slack-config-modal');
            modal.classList.add('hidden');
            modal.setAttribute('aria-hidden', 'true');
        }

        async function saveSlackConfig() {
            const select = document.getElementById('slack-channel-select');
            const saveBtn = document.getElementById('slack-config-save');
            const errorEl = document.getElementById('slack-channel-error');
            const channel = select.value;

            saveBtn.disabled = true;
            saveBtn.textContent = 'Saving...';
            errorEl.classList.add('hidden');

            try {
                const response = await fetch('{% url "core:configure_slack" %}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRFToken': '{{ csrf_token }}',
                    },
                    body: JSON.stringify({ channel: channel }),
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.error || 'Failed to save configuration');
                }

                // Success - close modal and show toast
                closeSlackConfigModal();
                NotipusUI.toast(`Notifications will now be sent to ${channel}`, 'success');

            } catch (error) {
                errorEl.textContent = error.message;
                errorEl.classList.remove('hidden');
                saveBtn.disabled = false;
                saveBtn.textContent = 'Save Changes';
            }
        }

        // Close modal on Escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                const modal = document.getElementById('slack-config-modal');
                if (!modal.classList.contains('hidden')) {
                    closeSlackConfigModal();
                }
            }
        });
    </script>
