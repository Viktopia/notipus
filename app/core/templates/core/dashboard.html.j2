{% extends "core/base.html.j2" %}
{% load humanize %}

{% block title %}Dashboard - {{ organization.name }}{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50">
    <!-- Simplified Header -->
    <div class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <div class="md:flex md:items-center md:justify-between">
                <div class="flex-1 min-w-0">
                    <h2 class="text-3xl font-bold leading-7 text-gray-900 sm:text-4xl sm:truncate">
                        Welcome back! 👋
                    </h2>
                    <p class="mt-1 text-lg text-gray-600">Ready to manage your webhooks</p>
                </div>
                <div class="mt-4 flex md:mt-0 md:ml-4 space-x-3">
                    <a href="{% url 'core:billing_dashboard' %}"
                       class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-all duration-200">
                        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                        </svg>
                        Billing
                    </a>
                    <a href="{% url 'core:integrations' %}"
                       class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-all duration-200">
                        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                        </svg>
                        Integrations
                    </a>
                    <a href="{% url 'core:organization_settings' %}"
                       class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 transition-all duration-200">
                        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        Settings
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <div class="max-w-7xl mx-auto py-8 sm:px-6 lg:px-8">
        <!-- Getting Started -->
        {% if not has_slack and not has_shopify and not has_chargify %}
        <div class="bg-gradient-to-r from-primary-50 to-blue-50 border border-primary-200 rounded-xl p-6 mb-8">
            <div class="flex">
                <div class="flex-shrink-0">
                    <div class="h-12 w-12 bg-primary-100 rounded-xl flex items-center justify-center">
                        <svg class="h-6 w-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                </div>
                <div class="ml-5">
                    <div class="flex items-center">
                        <h3 class="text-lg font-semibold text-primary-900">Welcome to Notipus! 🚀</h3>
                        <span class="ml-3 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800 border border-primary-200">
                            Getting Started
                        </span>
                    </div>
                    <div class="mt-2 text-sm text-primary-700">
                        <p>Let's get you set up with your first integration. Connect a service to start receiving webhook notifications:</p>
                    </div>
                    <div class="mt-4 flex flex-wrap gap-3">
                        <a href="{% url 'core:integrate_slack' %}"
                           class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 transition-all duration-200">
                            <i class="fas fa-comments mr-2"></i>
                            Connect Slack
                        </a>
                        <a href="{% url 'core:integrate_shopify' %}"
                           class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 transition-all duration-200">
                            <i class="fas fa-shopping-cart mr-2"></i>
                            Connect Shopify
                        </a>
                        <a href="{% url 'core:integrations' %}"
                           class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-all duration-200">
                            View All Integrations
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Consolidated Organization & Usage Dashboard -->
        <div class="mb-8">
            <div class="bg-white shadow-lg rounded-xl border border-gray-100 overflow-hidden">
                <!-- Organization Header -->
                <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="h-12 w-12 bg-gradient-to-r from-primary-500 to-primary-600 rounded-xl flex items-center justify-center text-white font-bold text-lg">
                                {{ organization.name|first|upper }}
                            </div>
                            <div class="ml-4">
                                <h2 class="text-xl font-bold text-gray-900">{{ organization.name }}</h2>
                                <div class="flex items-center space-x-4 mt-1">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gradient-to-r from-primary-100 to-primary-200 text-primary-800 border border-primary-200">
                                        ✨ {{ organization.subscription_plan|title }} Plan
                                    </span>
                                    <span class="flex items-center text-sm text-gray-500">
                                        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                                        </svg>
                                        Created {{ organization.created_at|date:"M j, Y" }}
                                    </span>
                                </div>
                            </div>
                        </div>
                        <!-- Quick Actions -->
                        <div class="flex items-center space-x-3">
                            {% if organization.subscription_plan == "trial" %}
                                <a href="{% url 'core:upgrade_plan' %}"
                                   class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 transition-all duration-200">
                                    <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                                    </svg>
                                    Upgrade Plan
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Usage Section -->
                <div class="p-6">
                    <div class="flex items-center justify-between mb-6">
                        <div class="flex items-center">
                            <div class="h-10 w-10 bg-primary-100 rounded-lg flex items-center justify-center">
                                <svg class="h-5 w-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-lg font-semibold text-gray-900">Monthly Usage</h3>
                                <p class="text-sm text-gray-600">{{ rate_limit_info.limit|floatformat:0|intcomma }} events/month limit</p>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="text-3xl font-bold {% if usage_percentage >= 90 %}text-red-600{% elif usage_percentage >= 75 %}text-yellow-600{% else %}text-gray-900{% endif %}">
                                {{ rate_limit_info.current_usage|floatformat:0|intcomma }}
                            </div>
                            <div class="text-sm text-gray-500">of {{ rate_limit_info.limit|floatformat:0|intcomma }}</div>
                        </div>
                    </div>

                    <!-- Progress Bar -->
                    <div class="mb-6">
                        <div class="flex items-center justify-between text-sm {% if usage_percentage >= 90 %}text-red-700{% elif usage_percentage >= 75 %}text-yellow-700{% else %}text-gray-700{% endif %} mb-2">
                            <span class="font-medium">Usage Progress</span>
                            <span class="font-bold">{{ usage_percentage|floatformat:1 }}%</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-3 shadow-inner">
                            <div class="h-3 rounded-full transition-all duration-300 {% if usage_percentage >= 90 %}bg-gradient-to-r from-red-500 to-red-600{% elif usage_percentage >= 75 %}bg-gradient-to-r from-yellow-500 to-yellow-600{% else %}bg-gradient-to-r from-primary-500 to-primary-600{% endif %}"
                                 style="width: {{ usage_percentage }}%"></div>
                        </div>
                        <div class="flex justify-between text-xs text-gray-500 mt-1">
                            <span>0</span>
                            <span>{{ rate_limit_info.limit|floatformat:0|intcomma }}</span>
                        </div>
                    </div>

                    <!-- Status and Info Row -->
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <!-- Status Badge -->
                            {% if usage_percentage >= 90 %}
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800 border border-red-200">
                                    ⚠️ Near Limit
                                </span>
                            {% elif usage_percentage >= 75 %}
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800 border border-yellow-200">
                                    📊 High Usage
                                </span>
                            {% elif usage_percentage >= 50 %}
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 border border-blue-200">
                                    📈 On Track
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800 border border-green-200">
                                    ✅ Looking Good
                                </span>
                            {% endif %}

                            <!-- Plan Info -->
                            <div class="text-sm text-gray-600">
                                {% if organization.subscription_status == "trial" %}
                                    <span class="font-medium">{{ trial_days_remaining }} days</span> trial remaining
                                {% else %}
                                    Resets <span class="font-medium">{{ rate_limit_info.reset_time|date:"M j" }}</span>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Usage Actions -->
                        <div class="flex items-center space-x-3">
                            {% if usage_percentage >= 75 %}
                                <a href="{% url 'core:upgrade_plan' %}"
                                   class="inline-flex items-center px-3 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 transition-all duration-200">
                                    <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                                    </svg>
                                    Upgrade
                                </a>
                            {% endif %}
                            <a href="{% url 'core:billing_dashboard' %}"
                               class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-all duration-200">
                                View Details
                            </a>
                        </div>
                    </div>

                    <!-- Warning Messages -->
                    {% if usage_percentage >= 95 %}
                        <div class="mt-4 p-3 bg-red-50 rounded-lg border border-red-200">
                            <div class="flex items-start">
                                <svg class="h-5 w-5 text-red-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                </svg>
                                <div class="ml-3">
                                    <h4 class="text-sm font-medium text-red-800">Action Required</h4>
                                    <p class="text-sm text-red-700 mt-1">
                                        You've used {{ usage_percentage|floatformat:0 }}% of your monthly quota. Upgrade now to avoid service interruption.
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% elif usage_percentage >= 80 %}
                        <div class="mt-4 p-3 bg-yellow-50 rounded-lg border border-yellow-200">
                            <div class="flex items-start">
                                <svg class="h-5 w-5 text-yellow-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                                </svg>
                                <div class="ml-3">
                                    <h4 class="text-sm font-medium text-yellow-800">Consider Upgrading</h4>
                                    <p class="text-sm text-yellow-700 mt-1">
                                        You're at {{ usage_percentage|floatformat:0 }}% usage. Consider upgrading for peace of mind.
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white shadow-lg rounded-xl border border-gray-100">
            <div class="px-6 py-6">
                <div class="flex items-center mb-6">
                    <div class="h-10 w-10 bg-primary-100 rounded-lg flex items-center justify-center">
                        <svg class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                    <h3 class="ml-3 text-xl font-semibold text-gray-900">Recent Activity</h3>
                    {% if recent_activity %}
                        <span class="ml-auto text-sm text-gray-500">{{ recent_activity|length }} event{{ recent_activity|length|pluralize }}</span>
                    {% endif %}
                </div>

                {% if recent_activity %}
                    <div class="space-y-4">
                        {% for activity in recent_activity %}
                            <div class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors duration-200">
                                <!-- Event Icon -->
                                <div class="flex-shrink-0">
                                    {% if activity.type == "payment" %}
                                        <div class="h-10 w-10 bg-green-100 rounded-lg flex items-center justify-center">
                                            <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                                            </svg>
                                        </div>
                                    {% else %}
                                        <div class="h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                            <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                                            </svg>
                                        </div>
                                    {% endif %}
                                </div>

                                <!-- Event Details -->
                                <div class="ml-4 flex-1">
                                    <div class="flex items-center justify-between">
                                        <div>
                                            <h4 class="text-sm font-medium text-gray-900">
                                                {% if activity.type == "payment" %}
                                                    💳 Payment {{ activity.status|title }}
                                                {% else %}
                                                    📦 Order {{ activity.status|title }}
                                                {% endif %}
                                            </h4>
                                            <p class="text-sm text-gray-500">
                                                {% if activity.type == "payment" %}
                                                    ${{ activity.amount|floatformat:2|intcomma }} {{ activity.currency|upper }} • {{ activity.provider|title }}
                                                {% else %}
                                                    Order #{{ activity.order_number }} • ${{ activity.amount|floatformat:2|intcomma }} {{ activity.currency|upper }}
                                                {% endif %}
                                            </p>
                                        </div>
                                        <div class="text-right">
                                            <div class="text-xs text-gray-400">
                                                {{ activity.processed_at|date:"M j, H:i" }}
                                            </div>
                                            {% if activity.status == "completed" or activity.status == "paid" %}
                                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    ✅ Success
                                                </span>
                                            {% elif activity.status == "failed" or activity.status == "declined" %}
                                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                    ❌ Failed
                                                </span>
                                            {% else %}
                                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                    ⏳ {{ activity.status|title }}
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center text-gray-500 py-12">
                        <svg class="mx-auto h-12 w-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                        <h3 class="mt-2 text-sm font-medium text-gray-900">No recent activity</h3>
                        <p class="mt-1 text-sm text-gray-500">
                            When webhooks are processed, they'll appear here.
                        </p>
                        <div class="mt-6">
                            <a href="{% url 'core:integrations' %}"
                               class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 transition-all duration-200">
                                <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                </svg>
                                Set up first integration
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}