<!-- Modal Backdrop -->
<div id="notipus-modal-backdrop"
     class="fixed inset-0 z-50 hidden"
     aria-hidden="true">
    <!-- Overlay -->
    <div class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm transition-opacity duration-200"
         id="notipus-modal-overlay"
         onclick="NotipusUI._closeModal(false)"></div>

    <!-- Modal Container -->
    <div class="fixed inset-0 z-10 overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <!-- Modal Panel -->
            <div id="notipus-modal-panel"
                 class="relative transform overflow-hidden rounded-xl bg-white text-left shadow-xl transition-all duration-200 sm:my-8 sm:w-full sm:max-w-lg"
                 role="dialog"
                 aria-modal="true"
                 aria-labelledby="notipus-modal-title">

                <!-- Modal Content -->
                <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <!-- Icon Container -->
                        <div id="notipus-modal-icon"
                             class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full sm:mx-0 sm:h-10 sm:w-10">
                            <!-- Icon will be inserted by JavaScript based on variant -->
                        </div>

                        <!-- Text Content -->
                        <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
                            <h3 class="text-lg font-semibold leading-6 text-gray-900"
                                id="notipus-modal-title">
                                <!-- Title will be inserted by JavaScript -->
                            </h3>
                            <div class="mt-2">
                                <p class="text-sm text-gray-500" id="notipus-modal-message">
                                    <!-- Message will be inserted by JavaScript -->
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal Actions -->
                <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6 gap-3">
                    <button type="button"
                            id="notipus-modal-confirm"
                            class="inline-flex w-full justify-center rounded-lg px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition-colors duration-200 sm:w-auto focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2"
                            onclick="NotipusUI._closeModal(true)">
                        <!-- Button text will be inserted by JavaScript -->
                    </button>
                    <button type="button"
                            id="notipus-modal-cancel"
                            class="mt-3 inline-flex w-full justify-center rounded-lg bg-white px-4 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 transition-colors duration-200 sm:mt-0 sm:w-auto focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-gray-500"
                            onclick="NotipusUI._closeModal(false)">
                        <!-- Cancel text will be inserted by JavaScript -->
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Toast Container for notifications -->
<div id="notipus-toast-container"
     class="fixed bottom-4 right-4 z-50 flex flex-col gap-2"
     aria-live="polite"
     aria-atomic="true">
    <!-- Toasts will be inserted here by JavaScript -->
</div>
