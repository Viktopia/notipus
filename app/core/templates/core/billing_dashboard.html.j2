{% extends "core/base.html.j2" %}
{% load humanize %}

{% block title %}
    Billing - Notipus
{% endblock title %}

{% block content %}
    <div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-blue-50/30 py-8 px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <!-- Header -->
            <div class="mb-8">
                <div class="flex items-center mb-4">
                    <a href="{% url 'core:dashboard' %}"
                       class="mr-4 p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-all duration-200">
                        <i class="ti ti-arrow-left text-xl"></i>
                    </a>
                    <div>
                        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 flex items-center gap-3">
                            <span class="p-2 bg-primary-100 rounded-xl">
                                <i class="ti ti-receipt-2 text-primary-600 text-xl"></i>
                            </span>
                            Billing
                        </h1>
                        <p class="mt-1 text-gray-500">Your subscription status and usage</p>
                    </div>
                </div>
            </div>

            <!-- Main Status Card -->
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden mb-6">
                <!-- Plan Header -->
                <div class="px-6 py-5 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-gray-50/50">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-4">
                            <div class="h-12 w-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center shadow-sm">
                                <i class="ti ti-crown text-white text-xl"></i>
                            </div>
                            <div>
                                <h2 class="text-lg font-semibold text-gray-900">{{ current_plan|title }} Plan</h2>
                                <p class="text-sm text-gray-500">{{ workspace.name }}</p>
                            </div>
                        </div>

                        <!-- Status Badge -->
                        {% if workspace.subscription_status == "trial" %}
                            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium bg-amber-50 text-amber-700 border border-amber-200">
                                <i class="ti ti-clock text-amber-500"></i>
                                Trial
                            </span>
                        {% elif workspace.subscription_status == "active" %}
                            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium bg-green-50 text-green-700 border border-green-200">
                                <i class="ti ti-circle-check text-green-500"></i>
                                Active
                            </span>
                        {% elif workspace.subscription_status == "suspended" %}
                            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium bg-red-50 text-red-700 border border-red-200">
                                <i class="ti ti-alert-triangle text-red-500"></i>
                                Suspended
                            </span>
                        {% else %}
                            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium bg-gray-50 text-gray-700 border border-gray-200">
                                <i class="ti ti-clipboard text-gray-500"></i>
                                {{ workspace.subscription_status|title }}
                            </span>
                        {% endif %}
                    </div>
                </div>

                <!-- Plan Details -->
                <div class="p-6">
                    <!-- Trial Warning -->
                    {% if workspace.subscription_status == "trial" %}
                        <div class="mb-6 p-4 bg-amber-50 rounded-xl border border-amber-100">
                            <div class="flex items-start gap-3">
                                <div class="p-1.5 bg-amber-100 rounded-lg">
                                    <i class="ti ti-clock text-amber-600"></i>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-sm font-medium text-amber-800">
                                        {% if trial_days_remaining > 0 %}
                                            {{ trial_days_remaining }} day{{ trial_days_remaining|pluralize }} left in your trial
                                        {% else %}
                                            Your trial has ended
                                        {% endif %}
                                    </h3>
                                    <p class="mt-1 text-sm text-amber-700">
                                        {% if trial_days_remaining > 0 %}
                                            Upgrade anytime to keep your notifications flowing.
                                        {% else %}
                                            Upgrade now to restore your notifications.
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Usage Stats -->
                    <div class="space-y-4">
                        <div>
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-sm font-medium text-gray-700">Monthly Usage</span>
                                <span class="text-sm text-gray-500">
                                    {{ rate_limit_info.current_usage|floatformat:0|intcomma }} / {{ rate_limit_info.limit|floatformat:0|intcomma }} events
                                </span>
                            </div>
                            <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
                                <div class="h-full rounded-full transition-all duration-500 {% if usage_percentage >= 90 %}bg-red-500{% elif usage_percentage >= 75 %}bg-amber-500{% else %}bg-primary-500{% endif %}"
                                     style="width: {{ usage_percentage|floatformat:0 }}%"></div>
                            </div>
                            {% if usage_percentage >= 90 %}
                                <p class="mt-2 text-xs text-red-600 flex items-center gap-1">
                                    <i class="ti ti-alert-circle"></i>
                                    You're approaching your monthly limit
                                </p>
                            {% endif %}
                        </div>

                        <!-- Plan Info Grid -->
                        <div class="grid grid-cols-2 gap-4 pt-4 border-t border-gray-100">
                            <div class="p-4 bg-gray-50 rounded-xl">
                                <div class="text-2xl font-bold text-gray-900">
                                    {% if workspace.subscription_plan == "free" %}
                                        Free
                                    {% elif workspace.subscription_plan == "basic" %}
                                        $29
                                    {% elif workspace.subscription_plan == "pro" %}
                                        $99
                                    {% elif workspace.subscription_plan == "enterprise" %}
                                        $299
                                    {% else %}
                                        --
                                    {% endif %}
                                </div>
                                <div class="text-sm text-gray-500">
                                    {% if workspace.subscription_plan == "free" %}
                                        forever
                                    {% elif workspace.subscription_status == "trial" %}
                                        after trial ends
                                    {% else %}
                                        per month
                                    {% endif %}
                                </div>
                            </div>
                            <div class="p-4 bg-gray-50 rounded-xl">
                                <div class="text-2xl font-bold text-gray-900">
                                    {% if workspace.subscription_plan == "free" %}
                                        --
                                    {% elif workspace.subscription_status == "trial" %}
                                        {{ trial_days_remaining }}
                                    {% else %}
                                        {{ rate_limit_info.reset_time|date:"M j" }}
                                    {% endif %}
                                </div>
                                <div class="text-sm text-gray-500">
                                    {% if workspace.subscription_plan == "free" %}
                                        no renewal
                                    {% elif workspace.subscription_status == "trial" %}
                                        days remaining
                                    {% else %}
                                        next renewal
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Upgrade CTA -->
            {% if workspace.subscription_plan == "free" %}
                <div class="bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl p-6 text-white shadow-lg">
                    <div class="flex items-start justify-between">
                        <div>
                            <h3 class="text-lg font-semibold mb-1">Ready to upgrade?</h3>
                            <p class="text-primary-100 text-sm">Get more notifications and premium features with a paid plan.</p>
                        </div>
                        <div class="p-2 bg-white/20 rounded-xl">
                            <i class="ti ti-rocket text-2xl"></i>
                        </div>
                    </div>
                    <a href="{% url 'core:upgrade_plan' %}"
                       class="mt-4 inline-flex items-center gap-2 px-5 py-2.5 bg-white text-primary-600 rounded-xl font-medium hover:bg-primary-50 transition-colors duration-200 shadow-sm">
                        <i class="ti ti-arrow-up-right"></i>
                        View Plans
                    </a>
                </div>
            {% elif workspace.subscription_status == "trial" %}
                <div class="bg-gradient-to-br from-amber-500 to-amber-600 rounded-2xl p-6 text-white shadow-lg">
                    <div class="flex items-start justify-between">
                        <div>
                            <h3 class="text-lg font-semibold mb-1">Trial in progress</h3>
                            <p class="text-amber-100 text-sm">
                                You're trialing the {{ workspace.subscription_plan|title }} plan. {{ trial_days_remaining }} days remaining.
                            </p>
                        </div>
                        <div class="p-2 bg-white/20 rounded-xl">
                            <i class="ti ti-clock text-2xl"></i>
                        </div>
                    </div>
                    <a href="{% url 'core:billing_portal' %}"
                       class="mt-4 inline-flex items-center gap-2 px-5 py-2.5 bg-white text-amber-600 rounded-xl font-medium hover:bg-amber-50 transition-colors duration-200 shadow-sm">
                        <i class="ti ti-settings"></i>
                        Manage Subscription
                    </a>
                </div>
            {% elif available_plans %}
                <div class="bg-white rounded-2xl border border-gray-100 p-6 shadow-sm">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-gray-100 rounded-xl">
                                <i class="ti ti-sparkles text-gray-600"></i>
                            </div>
                            <div>
                                <h3 class="font-medium text-gray-900">Want more features?</h3>
                                <p class="text-sm text-gray-500">Explore our other plans for additional capabilities.</p>
                            </div>
                        </div>
                        <a href="{% url 'core:upgrade_plan' %}"
                           class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-primary-600 hover:text-primary-700 hover:bg-primary-50 rounded-lg transition-colors duration-200">
                            View Plans
                            <i class="ti ti-chevron-right"></i>
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock content %}
